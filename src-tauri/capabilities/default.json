{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "opener:default",
    {
      "identifier": "fs:allow-read-file",
      "options": {
        "scope": [
          "$HOME/Music/**",
          "$HOME/Downloads/**",
          "$HOME/Documents/**",
          "$HOME/Desktop/**"
        ]
      }
    },
    "core:default"
  ]
}